<main class="pa4 black-80">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "measure center" }) do |f| %>
    <fieldset id="sign_in" class="ba b--transparent ph0 mh0">
      <legend class="f4 fw6 ph0 mh0">Welcome Back!</legend>
      <div class="mt3">
        <%= f.label :email, class: "db fw6 lh-copy f6" %>
        <%= f.email_field :email, autofocus: true, class: "pa2 input-reset ba bg-transparent w-100" %>
      </div>

      <div class="mv3">
        <%= f.label :password, class: "db fw6 lh-copy f6" %>
        <%= f.password_field :password, class: "pa2 input-reset ba bg-transparent w-100" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "pa0 ma0 lh-copy f6 pointer" %>
      <% end -%>
    </fieldset>
    <div class="">
      <%= f.submit "Log in", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib br0" %>
    </div>
    <div class="lh-copy mt3">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</main>