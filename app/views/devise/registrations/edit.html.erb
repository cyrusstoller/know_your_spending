<main class="pa4 black-80">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "measure center", method: :put }) do |f| %>
    <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
      <legend class="f4 fw6 ph0 mh0">Update account</legend>

      <%= devise_error_messages! %>

      <div class="mt3">
        <%= f.label :email, class: "db fw6 lh-copy f6" %>
        <%= f.email_field :email, autofocus: true, class: "pa2 input-reset ba bg-transparent w-100" %>
      </div>

      <div class="mv3">
        <%= f.label :password, class: "db fw6 lh-copy f6" %>
        <%= f.password_field :password, autocomplete: "off", class: "pa2 input-reset ba bg-transparent w-100" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="mv3">
        <%= f.label :password_confirmation, class: "db fw6 lh-copy f6" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "pa2 input-reset ba bg-transparent w-100" %>
      </div>

      <div class="mv3">
        <%= f.label :current_password, class: "db fw6 lh-copy f6" %>
        <%= f.password_field :current_password, autocomplete: "off", class: "pa2 input-reset ba bg-transparent w-100" %>
        <i>(we need your current password to confirm your changes)</i>
      </div>
    </fieldset>
    <div class="">
      <%= f.submit "Update", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib br0" %>
    </div>
  <% end %>

  <div class="measure center">
    <div class="lh-copy mt3">
      <p>
        <%= button_to "Cancel my account", registration_path(resource_name), 
          data: { confirm: "Are you sure?" }, method: :delete, class: "b ph3 pv2 input-reset ba b--dark-red bg-dark-red grow pointer f6 dib white br0" %>
        </p>
      <%= link_to "Back", :back %>
    </div>
  </div>
</main>