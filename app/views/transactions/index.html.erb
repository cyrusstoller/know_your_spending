<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Transaction</th>
      <th>Plaid account</th>
      <th>Category</th>
      <th>Plaid category</th>
      <th>Transaction type</th>
      <th>Amount</th>
      <th>Date of transaction</th>
      <th>Pending</th>
      <th>Location address</th>
      <th>Location city</th>
      <th>Location state</th>
      <th>Location zip</th>
      <th>Location lat</th>
      <th>Location lon</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.transaction_id %></td>
        <td><%= transaction.plaid_account_id %></td>
        <td><%= transaction.category %></td>
        <td><%= transaction.plaid_category_id %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.date_of_transaction %></td>
        <td><%= transaction.pending %></td>
        <td><%= transaction.location_address %></td>
        <td><%= transaction.location_city %></td>
        <td><%= transaction.location_state %></td>
        <td><%= transaction.location_zip %></td>
        <td><%= transaction.location_lat %></td>
        <td><%= transaction.location_lon %></td>
        <td><%= transaction.user_id %></td>
        <td><%= transaction.name %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
